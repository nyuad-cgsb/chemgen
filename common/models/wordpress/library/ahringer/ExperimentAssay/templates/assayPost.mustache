<div class="container">
  <div class="row">
      <div class="col-md-12">
      </div>
      <h2>Screen Information</h2>
      <section id="screenInfo">
          <h3>Plate View</h3>
          <p> Screen {{{screenName}}} Gene {{{geneName}}}</p>
          <a href="{{{plateUrl}}}">{{barcode}}</a>
          <table class="table responsive">
              <thead>
                  <tr>
                      <th>Tag</th>
                      <th>Value</th>
                  </tr>
              </thead>
              <tbody>
                  {{{table}}}
              </tbody>
          </table>
      </section>
      <section id="screenGeneGallery">
          <div>
              {{#hasGene}}
              <div id="enviraC">
                  <h5>Control</h5>
                  <p>
                      [envira-gallery-dynamic id="tags-{{enviraCTag}}" columns="{{enviraCCol}}"]</p>
              </div>
              {{/hasGene}}
              ${enviraTemplate}
          </div>
      </section>
      <section id="relatedAssay">
          <div class="">
          </div>
          <div class="" id="wbassay">
              [posts_table columns="image,title,tax:condition:Condition,tax:worm_strain:Strain" post_type="assay" term="wb_sequence_id:{{{geneNameSlug}}}+screen_name:{{{screenNameSlug}}}" lazy_load="true" links="title,image" image_size="medium" &nbsp;widths="50,20,20,10"
              filters="tax:worm_strain,tax:condition"]
          </div>
      </section>
      <section id="wbxref">
          <p>
              [posts_table columns="title,tax:wb_cosmid_id,tax:wb_sequence_id" post_type="wb_fn_desc" term="wb_sequence_id:{{geneNameSlug}}" lazy_load="true" links="title"]</p>
      </section>
  </div>
</div>
