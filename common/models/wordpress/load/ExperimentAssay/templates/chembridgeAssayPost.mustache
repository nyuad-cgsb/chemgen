<div class="">

  <div class="row">
    <div class="col-md-6">
      <div id="screenInfo">
        <h2>Screen Information</h2>
        <h3>Plate View</h3>
        <p> Screen {{{screenName}}} {{{taxTerm}}}</p>
        <a href="{{{plateUrl}}}">{{barcode}}</a>
      </div>
      <div id="libraryInfo">
        {{#libraryParent.chembridgelibraryId}}
          <h3> Parent Library Info </h3>
          <table class="table responsive">
            <tbody>
              <tr>
                <td>Chembridge Id</td>
                <td>{{libraryParent.chembridgelibraryId}}</td>
              </tr>
              <tr>
                <td>Plate</td>
                <td>{{libraryParent.plate}}</td>
              </tr>
              <tr>
                <td>Well</td>
                <td>{{libraryParent.coordinate}}</td>
              </tr>
              <tr>
                <td>Rb</td>
                <td>{{libraryParent.rb}}</td>
              </tr>
              <tr>
                <td>ClogP</td>
                <td>{{libraryParent.clogp}}</td>
              </tr>
              <tr>
                <td>Tpsa</td>
                <td>{{libraryParent.tpsa}}</td>
              </tr>
              <tr>
                <td>Name</td>
                <td>{{libraryParent.name}}</td>
              </tr>
            </tbody>
          </table>
        {{/libraryParent.chembridgelibraryId}}
      </div>
    </div>
    <div class="col-md-6">
      <div id="taxTerms">
        <table class="table responsive">
          <thead>
            <tr>
              <th>Tag</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            {{{table}}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <section id="screenGeneGallery">
        <div>
          {{#hasTaxTerm}}
            <h2>{{{taxTerm}}} N2</h2>
            <div id="enviraGallery">
              <p>
                [envira-gallery-dynamic id="tags-{{{screenNameSlug}}}_N2_{{{taxTermSlug}}}" columns="6"] </p>
            </div>
            <h2>{{{taxTerm}}} PS312</h2>
            <div id="enviraGallery">
              <p>
                [envira-gallery-dynamic id="tags-{{{screenNameSlug}}}_PS312_{{{taxTermSlug}}}" columns="6"] </p>
            </div>
          {{/hasTaxTerm}}
        </div>
      </section>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <section id="relatedAssay">
        <div class="">
        </div>
        <div class="" id="wbassay">
          [posts_table columns="image,title,tax:worm_strain:Strain"
          post_type="chembridge_assay" 
          term="envira-tag:{{{screenNameSlug}}}_{{{taxTermSlug}}}"
          lazy_load="true" links="title,image"
          image_size="medium" widths="80,10,10"
          filters="tax:worm_strain" rows_per_page="5"]
        </div>
      </section>
    </div>
  </div>

</div>
